{
    "model_name": "Qwen/Qwen2.5-0.5B-Instruct",
    "data_path": "data/cleaned/dialogs_clean.jsonl",
    "splits_path": "data/splits/edgesplits.json",
    "output_dir": "models/prefix_per_user",
    "prefix_config": {
        "num_virtual_tokens": 20,
        "prefix_projection": false,
        "task_type": "CAUSAL_LM"
    },
    "training_args": {
        "num_train_epochs": 10,
        "per_device_train_batch_size": 1,
        "per_device_eval_batch_size": 1,
        "gradient_accumulation_steps": 4,
        "learning_rate": 3e-4,
        "weight_decay": 0.01,
        "warmup_ratio": 0.1,
        "logging_steps": 10,
        "save_strategy": "epoch",
        "evaluation_strategy": "no",
        "save_total_limit": 2,
        "fp16": false,
        "optim": "adamw_torch",
        "report_to": "none"
    },
    "generation": {
        "max_new_tokens": 256,
        "temperature": 0.7,
        "top_p": 0.9
    },
    "max_length": 512,
    "seed": 42
}
